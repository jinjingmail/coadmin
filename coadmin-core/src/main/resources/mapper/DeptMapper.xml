<mapper namespace="com.gitee.coadmin.modules.system.service.mapper.DeptMapper">

  <!-- 通用查询结果列 -->
  <!--
  <sql id="Base_Column_List">
      id, pid, sub_count, name, dept_sort, enabled, create_by, update_by, create_time, update_time
