    <select id="querySubDeptIdByPids" resultType="java.lang.Long">
        SELECT id FROM sys_dept ${ew.customSqlSegment}
    </select>

    <select id="selectIdsByPid" resultType="java.lang.Long">
        SELECT id FROM sys_dept a WHERE pid=#{pid}
